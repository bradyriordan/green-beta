<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row about-content">
    <div class="col">
      <h1>Companies</h1>
    </div>
  </div>
</div>

<%= render :partial => 'search' %>

<div class="container">
  <div class="row about-content">
    <table class="table">
      <thead>
        <tr>
          <th>Isin</th>
          <th>Cusip</th>
          <th>Name</th>
          <th>Country</th>
          <th>Sector</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.isin %></td>
            <td><%= company.cusip %></td>
            <td><%= company.name %></td>
            <td><%= company.country %></td>
            <td><%= company.sector %></td>
            <td><%= link_to 'Show', company, :class => 'btn dorne-btn' %></td>            
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>
