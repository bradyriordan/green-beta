<p id="notice"><%= notice %></p>

<div class="container mt-50">
  <div class="row">
    <div class="col">
      <h1>Companies</h1>
    </div>
  </div><!-- Row -->
</div><!-- Container -->

<%= render :partial => 'search' %>

<div class="container">
  <div class="row">
    <div class="col">
      <p><%= number_with_delimiter(@companies.count) %> results</p>
    </div>
  </div>
</div>

<div class="container mt-50">
  <div class="row">    
      <table class="table table-striped table-hover table-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>Isin</th>
            <th>Cusip</th>          
            <th>Country</th>
            <th>Industry</th>
            <th>Carbon Beta</th>          
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= link_to company.name, company %></td>
              <td> <%= company.isin %></td>
              <td><%= company.cusip %></td>              
              <td><%= company.country %></td>
              <td><%= company.sector%></td>
              <td> <%= @company_data.carbon_beta.round(2) * - 1 %></td>
            </tr>
          <% end %>
        </tbody>
      </table>    
  </div> <!-- Row -->
</div> <!-- Container -->


<div class="container">
  <div class="row">
    <div class="col mt-50 mb-50">
      <%= will_paginate @companies, list_classes: %w(pagination justify-content-center dorne-pagination), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</div>

